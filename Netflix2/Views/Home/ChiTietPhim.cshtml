
@{
    ViewBag.Title = "ChiTietPhim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Netflix2.Models.Phim
<style>
    .movie-details {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        padding-top: 80px; /* Để tránh che phủ phần nội dung */
        align-items: center
    }

    .movie-poster {
        flex: 0 0 30%;
        margin-left: 20%;
    }

        .movie-poster img {
            width: 100%;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
        }

    .movie-info {
        flex: 0 0 70%;
        margin-left: 10%
    }

    .movie-title {
        font-size: 36px;
        font-weight: 800;
        margin-bottom: 20px;
    }

    .movie-description {
        font-size: 18px;
        line-height: 1.5;
        margin-bottom: 20px;
    }

    .khungDetail {
        width: 80%;
        height: auto;
        align-items: center
    }

    .watch-button {
        background-color: #e50914;
        color: #fff;
        border: none;
        padding: 10px 20px;
        font-size: 20px;
        cursor: pointer;
        border-radius: 10px;
        text-decoration: none;
    }

        .watch-button:hover {
            background-color: #ff0a16;
        }
    .comment-section {
        margin-top: 20px;
        border-top: 1px solid #ccc;
        padding-top: 20px;
    }

    .comment {
        margin-bottom: 20px;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        /*background-color: #f8f8f8;*/
        background-color: #000; /* Thay đổi nền thành màu đen */
        color: #fff; /* Thay đổi màu chữ thành màu trắng */
    }

    .comment-author {
        font-weight: bold;
        margin-bottom: 5px;
        color: #e50914; /* Thay đổi màu chữ của tên người dùng để nổi bật hơn */
    }

    .comment-content {
        margin-left: 10px;
    }
    .comment-form {
        background-color: #111;
        padding: 30px;
        border: 1px solid #ccc;
        border-radius: 5px;
        color: #fff;
    }

        .comment-form .form-group {
            margin-bottom: 20px;
        }

        .comment-form label {
            font-weight: bold;
        }

        .comment-form textarea {
            background-color: #000;
            border: none;
            color: #fff;
            width: 100%;
            height: 100px;
            border-radius: 5px;
            border: 1px solid #ccc;
            resize: none; /* Ngăn chặn người dùng thay đổi kích thước của ô textarea */
        }

        .comment-form button {
            background-color: #e50914;
            border: none;
            color: #fff;
            padding: 10px 20px;
            cursor: pointer;
            border-radius: 5px;
            transition: background-color 0.3s ease; /* Thêm hiệu ứng chuyển đổi màu sắc */
        }

            .comment-form button:hover {
                background-color: #ff0a16;
            }
</style>
<div class="khungDetail">
    <div class="movie-details">
        <div class="movie-poster">
            <img src="~/Content/PhimIMG/@Model.HinhMinhHoa" alt="Movie Poster">
        </div>
        <div class="movie-info">
            <div class="movie-title">@Model.TenPhim</div>
            <div class="movie-description">
                @Model.ChiTietPhim
            </div>
            <a class="watch-button" id="linkwhite" href="@Url.Action("XemPhim", "Home", new { id = Model.IdPhim })">Xem Ngay</a>
        </div>
    </div>
    <div class="comment-section">
        <h3>Bình luận</h3>
        @foreach (var comment in Model.BinhLuans)
        {
            <div class="comment">
                <div class="comment-author">@comment.KhachHang.HoTenKH</div>
                <div class="comment-content">@comment.NoiDung</div>
            </div>
        }

        <!-- Form để người dùng nhập bình luận -->
        <h3>Thêm bình luận</h3>
        <form method="post" action="@Url.Action("AddComment", "Home")" class="comment-form">
            <input type="hidden" name="idPhim" value="@Model.IdPhim" />

            <div class="form-group">
                <label for="NoiDung">Nội dung:</label>
                <textarea name="NoiDung" class="form-control"></textarea>
            </div>

            <button type="submit">Gửi bình luận</button>
        </form>
    </div>
</div>
